.xg-card {
    position: relative;
    flex-direction: column;
    box-sizing: border-box;
    display: flex;
    border-radius: 6px;
    background: transparentize( #212f56, 0.1 );
    border: 1px solid transparentize( #000, 0.9 );
    
    .xg-card-header {
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
        border-bottom: 1px solid transparentize( #10558e, 0.7 );
        padding: 4px;
        padding-bottom: 6px;
        padding-left: 16px;
    }

    .xg-card-body {
        border-bottom-left-radius: 6px;
        border-bottom-right-radius: 6px;
        padding: 4px;
    }

    .xg-card-footer {
        border-top: 1px solid transparentize( #10558e, 0.7 );
        padding: 4px;
        padding-top:10px;
    }


}

.mwl-container {
    position: relative;  
    .value-text {
        line-height: 1rem;
        position: absolute;
        top: calc(50% - 1rem/2);
        left: 0;
        width: 100%;
    }
}

mwl-gauge.kw {
    width: 100%;
    height: 100%;
    display: block;
    margin: 0px;
    padding: 10px;
    padding-top: 20px;
    // outline: 1px solid red;
}

mwl-gauge.kw > .gauge > .dial {
    stroke: #10558e;
    stroke-width: 6;
    stroke-linecap: round;
    fill: rgba(0,0,0,0);
}

mwl-gauge.kw > .gauge > .value {
    stroke: #0cfaa3;
    stroke-width: 6;
    stroke-linecap: round;
    fill: rgba(0,0,0,0);
}

mwl-gauge.kw > .gauge > .value-text {
    fill: transparentize( #7487c4, 0 ) !important;
    font-family: sans-serif;
    font-weight: bold;
    font-size: 1.2em;
    transform: translate(0px, 5px);
    display: none;
}

// router-outlet {
router-outlet ~ * {
    position: absolute;
    height: 100%;
    width: 100%;
}


.table.xg-table  thead  tr {
    background: transparentize( #000, 0.8 );
}

.table.xg-table thead th,
.table.xg-table tbody td {
    border-top: 1px solid transparent;
    border-bottom: 1px solid transparentize( #FFF, 0.95 );
}

.modal-footer .btn {
    min-width: 120px;
    height: 60px;
}

.table > * {
    font-size: 0.90em;
}

.xg-form-group {
    margin: 1px !important;
    padding: 2px !important;
    background: transparentize(#000000, 0.6 );
}
 
input.form-control {
    color: transparentize(#FFFFFF, 0.4 ) !important;
    background: transparentize(#FFFFFF, 0.9 );
    border: 1px solid transparentize(#000000, 0.8 );
}

.modal-footer .btn-force {
    @extend .btn-danger; 
    @extend .text-white;
}

.modal-footer .btn-confirm {
    @extend .btn-primary; 
    @extend .text-white;
}

.modal .btn-cancel {
    @extend .btn-secondary; 
    @extend .text-white;
}

.modal input {
    color: black !important;
}
