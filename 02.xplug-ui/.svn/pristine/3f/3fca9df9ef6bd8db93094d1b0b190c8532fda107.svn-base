$full_width : 1024px;
// $full_width : 960px;
$full_height: 600px;

$head_height: 60px;
$bott_height: 40px;
$body_height: $full_height - $head_height - $bott_height;

html, body {
    width: $full_width;
    height: $full_height;
    background: black;
}

body {
    background: #eee;
    overflow: hidden;
    width: $full_width;
    height: $full_height;
    background-image:    url(assets/purple/background.png);
    background-size:     cover;                     
    background-repeat:   no-repeat;
    background-position: center center;     
}

* {
    font-size: 1em;
    // color: transparentize( #7487c4, .3 ) !important;
    color: transparentize(white, .6 ) !important;
}

.board-test {
    // outline: 1px solid red;
    outline-offset: -1px;
}

.modal-header,
.modal-header *, 
.modal-footer, 
.modal-footer *, 
.modal-body,
.modal-body * {
    color: #333 !important;
} 

.xg-header {
    height: $head_height;
}
.xg-body {
    height: $body_height;
}
.xg-bottom {
    height: $bott_height;
}

.xg-page {
    width: $full_width;
    height: $body_height;
    padding: 20px;
}

.router-wrapper {
    position: relative;
    overflow: hidden;
    perspective: 1920px;
    transform-style: preserve-3d;
}

.text-orange {
    color: orange !important;
}

g[class*="-creditgroup"] {
    display: none;
}

